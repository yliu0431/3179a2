{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Population and Population Change over Year in Australian States",
  "width": 600,
  "height": 400,
  "projection": {
    "type": "mercator"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/yliu0431/3179a2/main/js/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/yliu0431/3179a2/refs/heads/main/data/population.csv",  
              "format": {
                "type": "csv"
              }
            },
            "key": "State",
            "fields": ["Population", "Change"]
          }
        }
      ],
      "mark": "geoshape",
      "encoding": {
        "color": {
          "field": "Change",
          "type": "quantitative",
          "scale": {
            "scheme": "blues"
          },
          "title": "Population Change (%)"
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "State"},
          {"field": "Population", "type": "quantitative", "title": "Population (in thousands)"},
          {"field": "Change", "type": "quantitative", "title": "Change (%)"}
        ]
      }
    }
  ]
}
