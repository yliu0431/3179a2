{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Population and Population Change over Year in Australian States",
  "width": 600,
  "height": 400,
  "projection": {
    "type": "mercator"
  },
  "params": [
    {
      "name": "populationSlider",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 9000,
        "step": 1000
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/yliu0431/3179a2/refs/heads/main/js/STE_2016_AUST.json",
        "format": {
          "type": "topojson",
          "feature": "STE_2016_AUST"
        }
      },
      "transform": [
        {
          "lookup": "properties.STE_NAME16",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/yliu0431/3179a2/refs/heads/main/data/population.csv",  
              "format": {
                "type": "csv"
              }
            },
            "key": "State",
            "fields": ["Population", "Change over previous year (%)"]
          }
        },
        {
          "filter": "datum.Population >= populationSlider"  
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "scheme": "blues"
          },
          "title": "Population Change (%)"
        },
        "tooltip": [
          {"field": "properties.STE_NAME16", "type": "nominal", "title": "State"},
          {"field": "Population", "type": "quantitative", "title": "Population (in thousands)"},
          {"field": "Change over previous year (%)", "type": "quantitative", "title": "Change (%)"}
        ]
      }
    }
  ]
}
