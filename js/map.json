{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Population and Population Change over Year in Australian States",
  "width": 600,
  "height": 400,
  "projection": {
    "type": "mercator"
  },
  "layer": [
    {
      "data": {
        "url": "",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "values": [
                {"State": "New South Wales", "Population": 8469.6, "Change": 2},
                {"State": "Victoria", "Population": 6959.2, "Change": 2.7},
                {"State": "Queensland", "Population": 5560.5, "Change": 2.5},
                {"State": "South Australia", "Population": 1873.8, "Change": 1.5},
                {"State": "Western Australia", "Population": 2951.6, "Change": 3.1},
                {"State": "Tasmania", "Population": 575.7, "Change": 0.4},
                {"State": "Northern Territory", "Population": 254.3, "Change": 0.8},
                {"State": "Australian Capital Territory", "Population": 472.8, "Change": 1.8}
              ]
            },
            "key": "State",
            "fields": ["Population", "Change"]
          }
        }
      ],
      "mark": "geoshape",
      "encoding": {
        "color": {
          "field": "Change",
          "type": "quantitative",
          "scale": {
            "scheme": "blues"
          },
          "title": "Population Change (%)"
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "State"},
          {"field": "Population", "type": "quantitative", "title": "Population (in thousands)"},
          {"field": "Change", "type": "quantitative", "title": "Change (%)"}
        ]
      }
    }
  ]
}
