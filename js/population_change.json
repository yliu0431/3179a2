

  
  {
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Scatter plot of Population vs. Population Change",
    "data": {
      "url": "https://raw.githubusercontent.com/yliu0431/3179a2/refs/heads/main/data/population.csv",
      "format": {"type": "csv"}
    },"params": [
{
"name": "Continent_selection",
"bind": {
"input": "select",
"options": [
null,
"North America",
"South America","Europe",
"Africa",
"Asia",
"Oceania"
],
"labels":[
"Show All",
"North America",
"South America",
"Europe",
"Africa",
"Asia",
"Oceania"
],
"name": "Continent Selection: "
}
}
],
    "mark": "point",
    "selection": {
    "StateSelection": {
      "type": "multi", 
      "fields": ["State"],  
      "bind": "legend"  
    }
  },
    "encoding": {
      "x": {"field": "Population", "type": "quantitative", "title": "Population (in thousands)"},
      "y": {"field": "Change over previous year (%)", "type": "quantitative", "title": "Population Change (%)"},
      "color": {"field": "State", "type": "nominal",
      "condition": {
        "selection": "StateSelection",  
        "value": "steelblue"  
      }},
      "opacity": {
        "condition": {"selection": "StateSelection", "value": 1},  
        "value": 0.2  
      },
      "size": {
        "field": "Population",
        "type": "quantitative",
        "title": "Dot Size (Population)",
        "scale": {"range": [30, 300]} 
      },
      "tooltip": [
        {"field": "State", "type": "nominal"},
        {"field": "Population", "type": "quantitative"},
        {"field": "Change over previous year (%)", "type": "quantitative"}
      ]
    }
  }
  